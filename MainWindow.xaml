<Window x:Class="NetworkModellingSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkModellingSoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Name="Window">
    <Grid>
        <Canvas>
            <local:Workspace x:Name="workspace" 
                             Width="{Binding ElementName=Window, Path=ActualWidth}" 
                             Height="{Binding ElementName=Window, Path=ActualHeight}" 
                             Background="#171717">
            </local:Workspace>
        </Canvas>
    </Grid>
</Window>
